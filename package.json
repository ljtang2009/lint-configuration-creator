{
  "name": "lint-configuration-creator",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "cm": "git-cz",
    "build": "rm -rf dist && tsc",
    "lint": "pnpm lint:eslint && pnpm lint:markdown && pnpm lint:cspell",
