{
  "name": "@ljtang2009/lint-configuration-creator",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "files": [
    "bin",
    "templates"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "cm": "git-cz",
    "release": "semantic-release",
    "build": "rm -rf bin && vite build",
    "build:watch": "vite build --watch",
    "debug": "node bin/index.js",
    "lint": "pnpm lint:eslint && pnpm lint:markdown && pnpm lint:cspell",
    "lint:eslint": "eslint .",
    "lint:eslint:view": "pnpx @eslint/config-inspector",
    "lint:eslint:fix": "time eslint --fix .",
    "lint:markdown": "markdownlint-cli2",
    "lint:cspell": "cspell lint --show-context  --show-suggestions .",
    "test": "vitest watch",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "audit-dep": "pnpm audit && snyk auth && snyk test",
    "audit-dep:ci": "pnpm audit && snyk test",
    "check-updates": "npx depcheck && npx npm-check-updates --interactive --format group"
  },
  "bin": {
    "create-by-lint-configuration": "./bin/index.js"
  },
  "keywords": [],
  "author": "Logan Tang <ho_ho_gl@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@inquirer/core": "^9.0.7",
    "@inquirer/prompts": "^5.3.4",
    "@ljtang2009/lint-configuration": "workspace:^1.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/figlet": "^1.5.8",
    "@types/node": "^20.12.7",
    "@vitest/coverage-v8": "^2.0.1",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "cspell": "^8.7.0",
    "cz-git": "^1.9.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "figlet": "^1.7.0",
    "globals": "^15.0.0",
    "handlebars": "^4.7.8",
    "husky": "^9.0.11",
    "lodash": "^4.17.21",
    "markdownlint-cli2": "^0.13.0",
    "memfs": "^4.9.3",
    "npm-check-updates": "^17.0.0",
    "only-allow": "^1.2.1",
    "semantic-release": "^23.0.8",
    "snyk": "^1.1292.1",
    "vite": "^5.2.8",
    "vite-plugin-inspect": "^0.8.5",
    "vite-plugin-static-copy": "^1.0.6",
    "vitest": "^2.0.1"
  }
}
