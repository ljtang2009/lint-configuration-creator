    "@ljtang2009/lint-configuration": "workspace:*",
    "@types/node": "^20.12.7",
    "commitizen": "^4.3.0",
    "cspell": "^8.7.0",
    "cz-git": "^1.9.1",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "lodash": "^4.17.21",
    "markdownlint-cli2": "^0.13.0",
    "meow": "^13.2.0",
